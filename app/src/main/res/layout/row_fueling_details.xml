<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/RowStyle"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:paddingBottom="4dp"
              android:paddingTop="4dp">

    <TextView
        android:id="@+id/fueling_row_date"
        style="@style/WideLightDataTextStyle"
        android:gravity="start"/>

    <TextView
        android:id="@+id/fueling_row_price"
        style="@style/NarrowLightDataTextStyle"
        android:text="@string/main_blank_value"/>

    <TextView
        android:id="@+id/fueling_row_dist"
        style="@style/WideLightDataTextStyle"
        android:text="@string/main_blank_value"/>

    <TextView
        android:id="@+id/fueling_row_vol"
        style="@style/NarrowLightDataTextStyle"
        android:text="@string/main_blank_value"/>

    <TextView
        android:id="@+id/fueling_row_efficiency"
        style="@style/WideLightDataTextStyle"
        android:text="@string/main_blank_value"/>

</LinearLayout>